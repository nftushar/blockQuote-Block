{
  "apiVersion": "1",
  "name": "b-blocks/blockquote",
  "title": "blockquote",
  "description": "Blockquote Gutenberg editing with easy-to-use, responsive blockquote  for  website's content",
  "category": "media",
  "keywords": ["blockquote", "block-quote", "Gutenberg"],
  "textdomain": "blockquote",
  "attributes": {
    "align": {
      "type": "string",
      "default": ""
    },
    "cId": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"
    },
    "theme": {
      "type": "string",
      "default": "default"
    },
    "background": {
      "type": "object",
      "default": {
        "color": "#ffcc00"
      }
    },
    "border": {
      "type": "object",
      "default": {
        "radius": "5px",
        "width": "1px",
        "color": "rgba(0, 0, 0, 0.85)"
      }
    },
    "textAlign": {
      "type": "string",
      "default": "center"
    },
    "typography": {
      "type": "object",
      "default": {
        "fontSize": 40,
        "fontStyle": "italic"
      }
    },
    "padding": {
      "type": "object",
      "default": {
        "top": "40px",
        "right": "40px",
        "bottom": "40px",
        "left": "40px"
      }
    },
    "contentPadding": {
      "type": "object",
      "default": {
        "top": "40px",
        "right": "40px",
        "bottom": "40px",
        "left": "40px"
      }
    },
    "color": {
      "type": "string",
      "default": "#fff"
    },
    "textShadow": {
      "type": "array",
      "default": [
        { "hOffset": "-1px", "vOffset": "1px", "blur": "0px", "color": "#555" }
      ]
    },

    "author": {
      "type": "string",
      "default": "NF Tushar"
    },
    "authorTypo": {
      "type": "object",
      "default": {
        "fontSize": 20
      }
    },
    "authorColor": {
      "type": "string",
      "default": "#336699"
    },
    "quoteColor": {
      "type": "string",
      "default": "#78C0A8"
    },
    "quoteSize": {
      "type": "string",
      "default": "110px"
    }
  },
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {
      "preview": true,
      "columns": {
        "desktop": 1,
        "tablet": 1,
        "mobile": 1
      }
    }
  },
  "editorScript": "file:../dist/editor.js"
}
